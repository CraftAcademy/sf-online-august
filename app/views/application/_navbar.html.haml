%nav.navbar.navbar-inverse
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{aria: {controls: 'navbar', expanded: 'false'}, data: {target: '#navbar', toggle: 'collapse'}, type: 'button'}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Best Slow Food', root_path, class: 'navbar-brand'
    #navbar.navbar-collapse.collapse
      %ul.nav.navbar-nav
        %li
          = link_to 'Home', root_path
        - if current_user
          %li
            = link_to 'Your profile', edit_user_registration_path
        - if can? :manage, Restaurant
          %li.dropdown
            = link_to '#', {class: 'dropdown-toggle', data: {toggle: 'dropdown'}} do
              Restaurant
              %strong.caret
            %ul.dropdown-menu
              %li
                = link_to 'Show your restaurant', restaurant_path(current_user)
              %li
                = link_to 'Create a new restaurant', new_restaurant_path(current_user)
              %li
                = link_to 'Update your restaurant', edit_restaurant_path(current_user)
            %li.dropdown
              = link_to '#', {class: 'dropdown-toggle', data: {toggle: 'dropdown'}} do
                Menu
                %strong.caret
              %ul.dropdown-menu
                %li
                  = link_to 'Create a menu', new_menu_path(current_user.restaurant)
            %li.dropdown
              = link_to '#', {class: 'dropdown-toggle', data: {toggle: 'dropdown'}} do
                Dishes
                %strong.caret
              %ul.dropdown-menu
                %li
                  = link_to 'Create a dish', new_dish_path(current_user.restaurant)
        - if can? :create, ShoppingCart
          %li
            = link_to 'Show cart', carts_path
      %ul.nav.navbar-nav.navbar-right
        - if current_user
          %p.navbar-text.navbar-right
            Signed in as
            = current_user.name
            = link_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-default btn-sm'
        - else
          %li
            = link_to 'Log in', new_user_session_path
          %li
            = link_to 'Sign up', new_user_registration_path