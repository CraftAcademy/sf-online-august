!!!
%html
  %head
    %meta{:content => 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type'}/
    %title SlowFood
    = csrf_meta_tags
    = include_gon(init: true)
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' =>'reload'
    = javascript_include_tag "//maps.google.com/maps/api/js?v=3.23&key=#{ ENV['GOOGLE_MAPS_API_KEY']}"
    = javascript_include_tag 'application', 'data-turbolinks-track' => 'reload'
  %body
    = render partial: 'navbar'
    - flash.each do |key, value|
      %div{class: "#{flash_class(key)}"}
        %a.close{aria: {label:'close'}, data: {dismiss: 'alert'}, href: '#'} Ã—
        %strong
          = value
  - if current_page?(root_path)
    .landing-container
      = yield
  - else
    .container
      = yield
      - unless current_user
        = link_to 'Register your restaurant account', new_user_registration_path(role: 'owner')
