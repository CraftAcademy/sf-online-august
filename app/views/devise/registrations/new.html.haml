.row
  .column-md-12
    %h2= "Sign up as #{resource.role.humanize}"
  .col-xs-8
    = form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form-group') do |f|
      = f.hidden_field :role, value: resource.role
      = devise_error_messages!
      .field
        = f.label :name
        = f.text_field :name, autofocus: true, class: 'form-control'
      .field
        = f.label :email
        = f.email_field :email, class: 'form-control'
      .field
        = f.label :address
        = f.text_field :address, class: 'form-control'
      .field
        = f.label :password
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
        = f.password_field :password, autocomplete: 'off', class: 'form-control'
      .field
        = f.label :password_confirmation
        = f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control'
        %br/
      .actions
        = f.submit 'Register', class: 'btn btn-success'
    = render 'devise/shared/links'
